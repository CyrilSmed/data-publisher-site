<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="{StaticResource DarkAccent}"/>
        <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="{StaticResource Background}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource LightBackground}"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource LightBackground}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource Background}"/>
        <Setter Property="RowBackground" Value="{StaticResource Background}"/>
        <Setter Property="RowHeight" Value="30"/>
        <Setter Property="RowHeaderWidth"  Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
    </Style>
</ResourceDictionary>